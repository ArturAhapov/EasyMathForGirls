<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/new_background_sky"
        android:layout_centerHorizontal="true"
        tools:context=".Activity_2nd">
    <!--Ballons-->
    <LinearLayout
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Space
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <ImageView
                android:id="@+id/ballon01"
                android:visibility="invisible"
                android:src="@drawable/ballon_red"
                android:layout_width="@dimen/ballons_width"
                android:layout_height="@dimen/ballons_height"/>
        <Space
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <ImageView
                android:id="@+id/ballon02"
                android:visibility="invisible"
                android:src="@drawable/ballon_green"
                android:layout_width="@dimen/ballons_width"
                android:layout_height="@dimen/ballons_height"/>
        <Space
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"/>
    </LinearLayout>
    <!--Clouds-->
    <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/bottom_cloud_back"
                android:rotationX="180"
                android:src="@drawable/new_bottom_clouds_back"
                android:scaleType="fitEnd"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <ImageView
                android:src="@drawable/new_bottom_clouds_front"
                android:rotationX="180"
                android:scaleType="fitEnd"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView
                android:text="@string/choose_to_continue"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/titleText"
                android:shadowColor="@color/shadow"
                android:shadowDx="@integer/shadowDx"
                android:shadowDy="@integer/shadowDy"
                android:shadowRadius="@integer/shadowRadius"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content">

        <GridLayout
                android:id="@+id/grid_for_buttons"
                android:layout_marginLeft="@dimen/activity_horizontal_half_margin"
                android:layout_marginStart="@dimen/activity_horizontal_half_margin"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="@dimen/choose_lesson_button_width"
                    android:layout_height="@dimen/choose_lesson_button_height"
                    android:layout_marginTop="@dimen/margin_top_for_button"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/new_color_green_MAIN"
                    android:background="@drawable/new_cloud_botton"
                    android:id="@+id/btn1"
                    android:layout_row="0"
                    android:layout_column="0"/>
            <Button
                    android:layout_width="@dimen/choose_lesson_button_width"
                    android:layout_height="@dimen/choose_lesson_button_height"
                    android:layout_marginTop="@dimen/margin_top_for_button"
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/new_color_yellow_MAIN"
                    android:background="@drawable/new_cloud_botton"
                    android:id="@+id/btn2"
                    android:layout_row="0"
                    android:layout_column="1"/>
            <Button
                    android:layout_width="@dimen/choose_lesson_button_width"
                    android:layout_height="@dimen/choose_lesson_button_height"
                    android:layout_marginTop="@dimen/margin_top_for_button"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="3"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorMagenta"
                    android:background="@drawable/new_cloud_botton"
                    android:id="@+id/btn3"
                    android:layout_row="0"
                    android:layout_column="2"/>
            <!--2nd row-->
            <Button
                    android:layout_width="@dimen/choose_lesson_button_width"
                    android:layout_height="@dimen/choose_lesson_button_height"
                    android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="4"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorRed"
                    android:background="@drawable/new_cloud_botton"
                    android:id="@+id/btn4"
                    android:layout_row="1"
                    android:layout_column="0"/>
            <Button
                    android:layout_width="@dimen/choose_lesson_button_width"
                    android:layout_height="@dimen/choose_lesson_button_height"
                    android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                    android:text="5"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorBlueLight"
                    android:background="@drawable/new_cloud_botton"
                    android:id="@+id/btn5"
                    android:layout_row="1"
                    android:layout_column="1"/>
            <Button
                    android:layout_width="@dimen/choose_lesson_button_width"
                    android:layout_height="@dimen/choose_lesson_button_height"
                    android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="6"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/new_color_green_MAIN"
                    android:background="@drawable/new_cloud_botton"
                    android:id="@+id/btn6"
                    android:layout_row="1"
                    android:layout_column="2"/>
            <!--3rd row-->
            <Button
                    android:layout_width="@dimen/choose_lesson_button_width"
                    android:layout_height="@dimen/choose_lesson_button_height"
                    android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="7"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/new_color_yellow_MAIN"
                    android:background="@drawable/new_cloud_botton"
                    android:id="@+id/btn7"
                    android:layout_row="2"
                    android:layout_column="0"/>
            <Button
                    android:layout_width="@dimen/choose_lesson_button_width"
                    android:layout_height="@dimen/choose_lesson_button_height"
                    android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                    android:text="8"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorMagenta"
                    android:background="@drawable/new_cloud_botton"
                    android:id="@+id/btn8"
                    android:layout_row="2"
                    android:layout_column="1"/>
            <Button
                    android:layout_width="@dimen/choose_lesson_button_width"
                    android:layout_height="@dimen/choose_lesson_button_height"
                    android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="9"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorBlueLight"
                    android:background="@drawable/new_cloud_botton"
                    android:id="@+id/btn9"
                    android:layout_row="2"
                    android:layout_column="2"/>
        </GridLayout>
        <!--More-->
        <TextView
                android:id="@+id/more"
                android:onClick="onClickMoreBtn"
                android:text="@string/more"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/titleText"
                android:shadowColor="@color/shadow"
                android:shadowDx="@integer/shadowDx"
                android:shadowDy="@integer/shadowDy"
                android:shadowRadius="@integer/shadowRadius"
                android:layout_marginTop="@dimen/margin_between_buttons_vertical"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout
                android:id="@+id/get_more_btn"
                android:visibility="invisible"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/activity_horizontal_half_margin"
                android:layout_marginStart="@dimen/activity_horizontal_half_margin"
                android:gravity="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button
                    android:layout_width="@dimen/choose_lesson_button_width"
                    android:layout_height="@dimen/choose_lesson_button_height"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="10"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorBlueLight"
                    android:background="@drawable/new_cloud_botton"
                    android:id="@+id/btn10"/>
            <Button
                    android:layout_width="@dimen/choose_lesson_button_width"
                    android:layout_height="@dimen/choose_lesson_button_height"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="@dimen/bigText"
                    android:textColor="@color/colorRed"
                    android:background="@drawable/new_cloud_botton"
                    android:id="@+id/btn0"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
