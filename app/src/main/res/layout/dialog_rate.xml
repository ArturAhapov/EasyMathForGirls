<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/rate_dialog_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:ads="http://schemas.android.com/apk/res-auto"
              android:layout_centerInParent="true"
              android:layout_gravity="center_horizontal"
              android:background="@color/colorWhite"
              android:orientation="vertical"
              tools:context="com.arturagapov.easymathforgirls.Lessons.Lesson3Activity">

        <TextView
                android:id="@+id/rate_dialog_topic"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/rate_the_app"
                android:textSize="@dimen/bigText"
                android:background="@color/colorAzzure"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/image_smile"
            android:src="@drawable/smile_happy_3"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="160dp" android:layout_height="160dp"/>
    <TextView
            android:id="@+id/rate_dialog_text"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/rate_text"
            android:textSize="@dimen/textSize_meaning"
            android:textColor="@color/colorAzzure"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>