<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/new_background_sky"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.arturagapov.easymathforgirls.MoreAppsActivity">

    <ScrollView
            android:layout_below="@+id/my_toolbar"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/elevation_2"
                    android:layout_marginLeft="@dimen/image_paddings"
                    android:layout_marginStart="@dimen/image_paddings"
                    android:layout_marginRight="@dimen/image_paddings"
                    android:layout_marginEnd="@dimen/image_paddings"
                    android:layout_marginTop="64dp"
                    android:layout_marginBottom="@dimen/image_paddings"
                    android:paddingLeft="@dimen/image_paddings"
                    android:paddingStart="@dimen/image_paddings"
                    android:paddingRight="@dimen/image_paddings"
                    android:paddingEnd="@dimen/image_paddings"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/image_paddings"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/image_oxford"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:gravity="fill_horizontal"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_more_apps_oxford"
                            android:layout_marginRight="@dimen/image_paddings"
                            android:layout_marginEnd="@dimen/image_paddings"
                            android:layout_width="@dimen/apps_icon_size" android:layout_height="@dimen/apps_icon_size"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:paddingEnd="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1">
                        <TextView
                                android:text="@string/oxford_name"
                                android:textColor="@color/new_color_blue_SOFT"
                                android:textSize="@dimen/textSize_meaning"
                                android:textStyle="bold"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView
                                android:text="@string/oxford_description"
                                android:textColor="@color/textColorLIGHT"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <Button
                            android:onClick="onClickOxford"
                            android:text="@string/install_the_app"
                            android:textAllCaps="true"
                            android:background="@drawable/new_button_blue"
                            android:textColor="@color/colorWhite"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingStart="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingEnd="@dimen/activity_horizontal_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>
                </LinearLayout>
            </LinearLayout>
            <!--AdMob-->
            <LinearLayout
                    android:id="@+id/adView_layout"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/elevation_2"
                    android:layout_marginLeft="@dimen/activity_horizontal_half_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_half_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_half_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_half_margin"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">

            </LinearLayout>
            <!--GeoQuiz-->
            <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/elevation_2"
                    android:layout_marginTop="@dimen/activity_horizontal_half_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_half_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_half_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_half_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_half_margin"
                    android:paddingLeft="@dimen/activity_horizontal_half_margin"
                    android:paddingStart="@dimen/activity_horizontal_half_margin"
                    android:paddingRight="@dimen/activity_horizontal_half_margin"
                    android:paddingEnd="@dimen/activity_horizontal_half_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_horizontal_half_margin"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/image_geo_quiz"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:gravity="fill_horizontal"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_more_apps_geo_quiz"
                            android:layout_marginRight="@dimen/activity_horizontal_half_margin"
                            android:layout_marginEnd="@dimen/activity_horizontal_half_margin"
                            android:layout_width="@dimen/apps_icon_size" android:layout_height="@dimen/apps_icon_size"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:paddingEnd="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1">
                        <TextView
                                android:text="@string/geo_quiz_name"
                                android:textColor="@color/new_color_green_MAIN"
                                android:textSize="@dimen/textSize_meaning"
                                android:textStyle="bold"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView
                                android:text="@string/geo_quiz_description"
                                android:textColor="@color/textColorLIGHT"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <Button
                            android:onClick="onClickGeoQuiz"
                            android:text="@string/install_the_app"
                            android:textAllCaps="true"
                            android:background="@drawable/new_button_green"
                            android:textColor="@color/colorWhite"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingStart="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingEnd="@dimen/activity_horizontal_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>
                </LinearLayout>
            </LinearLayout>
            <Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/activity_vertical_margin"/>
            <!--Easy Math-->
            <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/elevation_2"
                    android:layout_marginLeft="@dimen/activity_horizontal_half_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_half_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_half_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_half_margin"
                    android:paddingLeft="@dimen/activity_horizontal_half_margin"
                    android:paddingStart="@dimen/activity_horizontal_half_margin"
                    android:paddingRight="@dimen/activity_horizontal_half_margin"
                    android:paddingEnd="@dimen/activity_horizontal_half_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_horizontal_half_margin"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/image_easy_math"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:gravity="fill_horizontal"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/ic_more_apps_eathy_math"
                            android:layout_marginRight="@dimen/image_paddings"
                            android:layout_marginEnd="@dimen/image_paddings"
                            android:layout_width="@dimen/apps_icon_size" android:layout_height="@dimen/apps_icon_size"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:paddingEnd="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1">
                        <TextView
                                android:text="@string/easy_math_name"
                                android:textColor="@color/new_color_magenta_MAIN"
                                android:textSize="@dimen/textSize_meaning"
                                android:textStyle="bold"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView
                                android:text="@string/easy_math_description"
                                android:textColor="@color/textColorLIGHT"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <Button
                            android:onClick="onClickEasyMath"
                            android:text="@string/install_the_app"
                            android:textAllCaps="true"
                            android:background="@drawable/new_button_magenta"
                            android:textColor="@color/colorWhite"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingStart="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingEnd="@dimen/activity_horizontal_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>
                </LinearLayout>
            </LinearLayout>
            <Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/activity_vertical_margin"/>
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>
    <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light"-->
    <!--Clouds-->
    <RelativeLayout
            android:layout_below="@+id/my_toolbar"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/bottom_cloud_back"
                android:rotationX="180"
                android:src="@drawable/new_bottom_clouds_back"
                android:scaleType="fitEnd"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <ImageView
                android:src="@drawable/new_bottom_clouds_front"
                android:rotationX="180"
                android:scaleType="fitEnd"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>

