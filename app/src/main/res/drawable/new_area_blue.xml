<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<!-- Drop Shadow Stack -->
<item>
    <shape>
        <corners android:radius="@dimen/area_rounded" />

        <padding
                android:bottom="@dimen/button_stroke"
                android:left="@dimen/button_stroke"
                android:right="@dimen/button_stroke"
                android:top="@dimen/button_stroke" />
        <gradient
                android:type="linear"
                android:endColor="@color/colorWhite"
                android:centerColor="@color/new_color_white_DARK"
                android:startColor="@color/new_color_white_DARK"
                android:angle="135"/>
    </shape>
</item>

<!-- Background -->
<item>
    <shape>
        <gradient
                android:type="linear"
                android:endColor="@color/new_color_blue_MAIN"
                android:centerColor="@color/new_color_blue_MAIN"
                android:startColor="@color/new_color_blue_SOFT"
                android:angle="135"/>

        <corners android:radius="@dimen/area_rounded" />
    </shape>
</item>

</layer-list>